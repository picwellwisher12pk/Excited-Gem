doctype html
html
  head
    title My Test Extension Options
    style.
      body: {
      padding: 10px;
      }
    link(rel='stylesheet', href='css/bootstrap.css')
    link(rel='stylesheet', href='css/font-awesome.css')
    link(href='css/onetab.css', rel='stylesheet', type='text/css')
    script(src='js/jquery.min.js')
    script(src='js/bootstrap.js')
    script(src='js/content.js')
  body.eg
    include navigation
    .container
      h1 Options
      #status.alert.alert-success(role='alert', style='display: none;')
        button.close(type='button', data-dismiss='alert', aria-label='Close')
          span(aria-hidden='true') Ã—
        span
      .cf.clearfix(style='margin-bottom: 15px;')
        button#save.btn.btn-success.btn-lg.pull-right(type='button')
          span.glyphicon.glyphicon-floppy-disk(aria-hidden='true')
          |  Save
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading
              h3.panel-title Search/Filter
            .panel-body
              form
                .form-group
                  label(for='filter-type-option-id') Filter Type:
                  select#filter-type-option-id.form-control
                    option(value='normal') Normal
                    option(value='regex') Regular Expression
                .checkbox
                  label
                    input#filterCase-option-id(type='checkbox')
                    |  Case Insensitive?
              // <label for="case"><input type="checkbox" name="case" id="filterCase-option-id"></label>
        .col-md-6
          .panel.panel-default
            .panel-heading
              h3.panel-title Tabs
            .panel-body
              form
                .form-group
                  label(for='sort-animation-option-id') Sort Tabs Animation
                  .input-group
                    input#sort-animation-option-id.form-control(type='number', value='250', min='0')
                    span.input-group-addon milliseconds
                  span
                    | ( Time in milliseconds. 0 means no very quick. higher numbers means slower animation)
              // <label for="case"><input type="checkbox" name="case" id="filterCase-option-id"></label>
      #status
    script(src='js/options.js')
