{
    "name": "Excited Gem",
    "version": "0.8.0",
    "permissions": ["tabs", "idle", "<all_urls>", "contextMenus", "storage", "notifications"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/logo.svg",
            "38": "images/logo.svg"
        },
        "default_title": "Excited Gem"
    },
    "commands": {
        "execute_browser_action": {
            "description": "Display Excited Gem Tabs Page",
            "suggested_key": {
                "windows": "Ctrl+Shift+X"
            }
        }
    },
    "description": "A tabs management extension.",
    "icons": {
        "128": "images/logo.svg",
        "16": "images/logo.svg",
        "48": "images/logo.svg"
    },
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}