{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "logo.svg",
    "48": "logo.svg",
    "128": "logo.svg"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "tabGroups",
    "unlimitedStorage",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "http://*.youtube.com/*"
  ],
  "{{chrome}}.action": {
    "default_icon": {
      "19": "logo.svg",
      "38": "logo.svg"
    },
    "default_title": "Excited Gem"
  },
  "side_panel": {
    "default_path": "tabs/home.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ]
  }
}